<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tictactoeal.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/probText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/undoButton"
        android:layout_below="@+id/line2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board3"
        android:textSize="90sp"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_alignBottom="@+id/line3"
        android:layout_toRightOf="@+id/line2"
        android:layout_toEndOf="@+id/line2"
        android:layout_marginBottom="7dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board1"
        android:textSize="90sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/line1"
        android:layout_toStartOf="@+id/line1"
        android:layout_marginTop="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/black"
        android:id="@+id/line3"

        android:layout_below="@+id/board1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board4"
        android:textSize="90sp"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/board5"
        android:layout_alignBottom="@+id/board5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <View
        android:layout_height="350dp"
        android:layout_width="10dp"
        android:background="@android:color/black"
        android:id="@+id/line1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/board4"
        android:layout_toEndOf="@+id/board4"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board9"
        android:textSize="90sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/line4"
        android:layout_toRightOf="@+id/line2"
        android:layout_toEndOf="@+id/line2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board8"
        android:textSize="90sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/line4"
        android:layout_alignLeft="@+id/board5"
        android:layout_alignStart="@+id/board5" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board2"
        android:fontFamily="serif"
        android:textSize="90sp"
        android:textAlignment="center"
        android:layout_above="@+id/line3"
        android:layout_alignLeft="@+id/board5"
        android:layout_alignStart="@+id/board5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/black"
        android:id="@+id/line4"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/board6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board6"
        android:textSize="90sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/board3"
        android:layout_toRightOf="@+id/line2"
        android:layout_toEndOf="@+id/line2" />

    <View
        android:layout_height="350dp"
        android:layout_width="10dp"
        android:background="@android:color/black"
        android:id="@+id/line2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/board8"
        android:layout_toEndOf="@+id/board8"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board7"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="90sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:fontFamily="serif"
        android:layout_below="@+id/line4"
        android:layout_toLeftOf="@+id/line1"
        android:layout_toStartOf="@+id/line1" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/board5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="90sp"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_below="@+id/line3"
        android:layout_toRightOf="@+id/line1"
        android:layout_toEndOf="@+id/line1" />
</RelativeLayout>
